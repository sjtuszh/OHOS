<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:login_room_btn"
        ohos:height="100vp"
        ohos:width="200vp"
        ohos:text="加入房间"
        ohos:background_element="#888888"
        ohos:text_size="25fp"
        ohos:margin="6vp"
        ohos:shadow_color="#FF7B7E7E"
        ohos:hint_color="#FFAB0C2B"
        />
    <Button
        ohos:id="$+id:register_btn"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:clickable="true"
        ohos:text_size="27fp"
        ohos:text="register"
        ohos:background_element="$graphic:background_button"
        ohos:left_margin="15vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="8vp"
        ohos:left_padding="8vp"
        />
    <Button
        ohos:id="$+id:devicelist_btn"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:clickable="true"
        ohos:text_size="27fp"
        ohos:text="devicelist"
        ohos:background_element="$graphic:background_button"
        ohos:left_margin="15vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="8vp"
        ohos:left_padding="8vp"
        />
    <Button
        ohos:id="$+id:startremote_btn"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:clickable="true"
        ohos:text_size="27fp"
        ohos:text="startremote"
        ohos:background_element="$graphic:background_button"
        ohos:left_margin="15vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="8vp"
        ohos:left_padding="8vp"
        />
    <Button
        ohos:id="$+id:stopremote_btn"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:clickable="true"
        ohos:text_size="27fp"
        ohos:text="stopremote"
        ohos:background_element="$graphic:background_button"
        ohos:left_margin="15vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="8vp"
        ohos:left_padding="8vp"
        />
    <Button
        ohos:id="$+id:connectpa_btn"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:clickable="true"
        ohos:text_size="27fp"
        ohos:text="connectpa"
        ohos:background_element="$graphic:background_button"
        ohos:left_margin="15vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="8vp"
        ohos:left_padding="8vp"
        />
    <Button
        ohos:id="$+id:controlpa_btn"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:clickable="true"
        ohos:text_size="27fp"
        ohos:text="controlpa"
        ohos:background_element="$graphic:background_button"
        ohos:left_margin="15vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="8vp"
        ohos:left_padding="8vp"
        />
    <Button
        ohos:id="$+id:disconnectpa_btn"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:clickable="true"
        ohos:text_size="27fp"
        ohos:text="disconnectpa"
        ohos:background_element="$graphic:background_button"
        ohos:left_margin="15vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="8vp"
        ohos:left_padding="8vp"
        />

    <Button
        ohos:id="$+id:back_btn"
        ohos:height="100vp"
        ohos:width="200vp"
        ohos:text="退回"
        ohos:background_element="#888888"
        ohos:text_size="25fp"
        ohos:margin="6vp"
        ohos:shadow_color="#FF7B7E7E"
        ohos:hint_color="#FFAB0C2B"
        />



</DirectionalLayout>