<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:device_btn"
        ohos:height="100vp"
        ohos:width="200vp"
        ohos:text="寻找TV端"
        ohos:background_element="#888888"
        ohos:text_size="25fp"
        ohos:margin="6vp"
        ohos:shadow_color="#FF7B7E7E"
        ohos:hint_color="#FFAB0C2B"
        />

    <Button
        ohos:id="$+id:start_btn"
        ohos:height="100vp"
        ohos:width="200vp"
        ohos:text="连接房间"
        ohos:background_element="#888888"
        ohos:text_size="25fp"
        ohos:margin="6vp"
        ohos:shadow_color="#FF7B7E7E"
        ohos:hint_color="#FFAB0C2B"
        />



    <Button
        ohos:id="$+id:back_btn"
        ohos:height="100vp"
        ohos:width="200vp"
        ohos:text="退回"
        ohos:background_element="#888888"
        ohos:text_size="25fp"
        ohos:margin="6vp"
        ohos:shadow_color="#FF7B7E7E"
        ohos:hint_color="#FFAB0C2B"
        />


</DirectionalLayout>